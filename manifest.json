{
    "manifest_version": 3,
    "name": "OpenAI Chrome Extension",
    "version": "1.0",
    "description": "Select text, send it to OpenAI, and display the result in a floating window.",
    "permissions": [
        "contextMenus",
        "activeTab",
        "storage",
        "tabs"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "assets/search.png"
        }
    },
    "icons": {
        "16": "assets/search.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content-script.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ]
}